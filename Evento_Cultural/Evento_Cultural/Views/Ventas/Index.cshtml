@model IEnumerable<Evento_Cultural.Models.Venta>
@{
    ViewData["Title"] = "Registro de Ventas";

    // Cálculos rápidos
    var ventasHoy = Model.Where(v => v.FechaVenta.Date == DateTime.Today).ToList();
    var totalHoy = ventasHoy.Sum(v => v.Total);
    var totalGeneral = Model.Sum(v => v.Total);
    var entradasVendidasHoy = ventasHoy.Sum(v => v.Cantidad);
    var totalEntradas = Model.Sum(v => v.Cantidad);
}

<div class="animate-fade-in max-w-7xl mx-auto py-8">
    <!-- Header + Stats -->
    <div class="flex justify-between items-start mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Registro de Ventas</h1>
            <p class="text-gray-600 mt-1">Historial completo de entradas vendidas</p>
        </div>
        <a asp-action="Create" class="bg-green-600 hover:bg-green-700 text-white px-6 py-4 rounded-xl flex items-center gap-3 shadow-lg transition-all transform hover:scale-105">
            <i data-lucide="shopping-cart" class="w-6 h-6"></i>
            <span class="font-bold text-lg">Nueva Venta</span>
        </a>
    </div>

    <!-- Tarjetas de Resumen -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-gradient-to-br from-blue-500 to-blue-600 text-white p-6 rounded-xl shadow-lg">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-blue-100 text-sm">Ventas Hoy</p>
                    <p class="text-3xl font-bold mt-1">$@totalHoy.ToString("N2")</p>
                </div>
                <i data-lucide="trending-up" class="w-10 h-10 opacity-80"></i>
            </div>
        </div>

        <div class="bg-gradient-to-br from-green-500 to-emerald-600 text-white p-6 rounded-xl shadow-lg">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-green-100 text-sm">Entradas Vendidas Hoy</p>
                    <p class="text-3xl font-bold mt-1">@entradasVendidasHoy</p>
                </div>
                <i data-lucide="ticket" class="w-10 h-10 opacity-80"></i>
            </div>
        </div>

        <div class="bg-gradient-to-br from-purple-500 to-indigo-600 text-white p-6 rounded-xl shadow-lg">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-purple-100 text-sm">Total Acumulado</p>
                    <p class="text-3xl font-bold mt-1">$@totalGeneral.ToString("N2")</p>
                </div>
                <i data-lucide="dollar-sign" class="w-10 h-10 opacity-80"></i>
            </div>
        </div>

        <div class="bg-gradient-to-br from-orange-500 to-red-600 text-white p-6 rounded-xl shadow-lg">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-orange-100 text-sm">Total Entradas</p>
                    <p class="text-3xl font-bold mt-1">@totalEntradas</p>
                </div>
                <i data-lucide="users" class="w-10 h-10 opacity-80"></i>
            </div>
        </div>
    </div>

    <!-- Lista de Ventas (tarjetas estilo Participaciones) -->
    @if (!Model.Any())
    {
        <div class="text-center py-16 bg-white rounded-xl border-2 border-dashed border-gray-300">
            <i data-lucide="shopping-cart" class="w-16 h-16 text-gray-300 mx-auto mb-4"></i>
            <p class="text-xl text-gray-500">Aún no hay ventas registradas</p>
            <p class="text-gray-400 mt-2">¡Empieza vendiendo la primera entrada!</p>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var v in Model.OrderByDescending(v => v.FechaVenta))
            {
                <div class="bg-white rounded-xl shadow-md border border-gray-200 hover:shadow-xl transition-all overflow-hidden group">
                    <div class="bg-gradient-to-r from-green-500 to-emerald-600 text-white p-4">
                        <div class="flex justify-between items-center">
                            <span class="text-sm font-medium">Venta #@v.Id</span>
                            <span class="text-2xl font-bold">$@v.Total.ToString("N2")</span>
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="font-bold text-lg text-gray-900 truncate">@v.Evento?.Titulo</h3>
                        <p class="text-sm text-gray-600 mt-1">
                            <i data-lucide="calendar" class="w-4 h-4 inline"></i>
                            @v.FechaVenta.ToString("dd MMM yyyy - HH:mm")
                        </p>
                        <p class="text-sm text-gray-600 mt-2">
                            <i data-lucide="user" class="w-4 h-4 inline"></i>
                            @v.ClienteNombre
                        </p>
                        <div class="mt-4 pt-4 border-t border-gray-100 flex justify-between text-sm">
                            <span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full font-medium">
                                @v.Cantidad entrada@(v.Cantidad > 1 ? "s" : "")
                            </span>
                            <a asp-action="Details" asp-route-id="@v.Id" class="text-indigo-600 hover:text-indigo-800 font-medium">
                                Ver recibo →
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        lucide.createIcons();
    </script>
}