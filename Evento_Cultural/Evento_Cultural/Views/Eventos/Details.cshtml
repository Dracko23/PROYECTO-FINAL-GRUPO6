@model Evento_Cultural.Models.Evento
@{
    ViewData["Title"] = "Detalles del Evento";
}

<div class="max-w-4xl mx-auto animate-fade-in">
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
        <!-- Header con Gradiente -->
        <div class="relative h-48 bg-gradient-to-r from-indigo-600 to-purple-600">
            <div class="absolute bottom-0 left-0 w-full p-8 bg-gradient-to-t from-black/50 to-transparent">
                <h1 class="text-3xl font-bold text-white shadow-sm">@Model.Titulo</h1>
                <p class="text-indigo-100 mt-1">@Model.TipoEvento</p>
            </div>
        </div>

        <!-- Contenido -->
        <div class="p-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
                <div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                        <i data-lucide="info" class="w-5 h-5 mr-2 text-indigo-500"></i> Información
                    </h3>
                    <div class="space-y-4">
                        <div>
                            <label class="text-xs font-semibold text-gray-500 uppercase">Fecha Inicio</label>
                            <p class="text-gray-900">@Model.FechaInicio.ToString("f")</p>
                        </div>
                        <div>
                            <label class="text-xs font-semibold text-gray-500 uppercase">Lugar</label>
                            <p class="text-gray-900">@Model.Lugar</p>
                        </div>
                        <div>
                            <label class="text-xs font-semibold text-gray-500 uppercase">Estado</label>
                            <p class="text-gray-900">@Model.Estado</p>
                        </div>
                    </div>
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Descripción</h3>
                    <p class="text-gray-600 leading-relaxed">
                        @(string.IsNullOrEmpty(Model.Descripcion) ? "Sin descripción disponible." : Model.Descripcion)
                    </p>
                </div>
            </div>

            <div class="flex justify-end gap-3 pt-6 border-t border-gray-100">
                <a asp-action="Index" class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900">Volver</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">Editar</a>
            </div>
        </div>
    </div>
</div>