@model Evento_Cultural.Models.Entrada
@{
    ViewData["Title"] = "Detalle Entrada";
}
<div class="max-w-lg mx-auto animate-fade-in py-8">
    <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100 flex justify-between items-center bg-gray-50">
            <h3 class="font-bold text-gray-800">Detalle de Entrada</h3>
            <span class="bg-indigo-100 text-indigo-700 text-xs px-2 py-1 rounded-full font-bold">ID: @Model.Id</span>
        </div>
        <div class="p-6 space-y-4">
            <div>
                <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Evento</label>
                <p class="text-lg font-medium text-gray-900">@Model.Evento?.Titulo</p>
            </div>
            <div>
                <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Tipo de Entrada</label>
                <p class="text-xl font-bold text-indigo-700">@Model.TipoEntrada</p>
            </div>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Precio</label>
                    <p class="text-2xl font-bold text-green-600">$@Model.Precio.ToString("N2")</p>
                </div>
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Stock Actual</label>
                    <p class="text-xl font-bold text-gray-900">@Model.Stock</p>
                </div>
            </div>
            <div>
                <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Stock Mínimo</label>
                <p class="text-lg font-medium text-orange-600">@Model.StockMinimo</p>
            </div>
        </div>
        <div class="p-4 bg-gray-50 border-t border-gray-100 text-center">
            <a asp-action="Index" class="text-indigo-600 font-medium hover:text-indigo-800">Volver al listado</a>
        </div>
    </div>
</div>