@model Evento_Cultural.Models.Participacion
@{
    ViewData["Title"] = "Detalle Participación";
}

<div class="max-w-lg mx-auto animate-fade-in">
    <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100 flex justify-between items-center bg-gray-50">
            <h3 class="font-bold text-gray-800">Ficha de Participación</h3>
            <span class="bg-indigo-100 text-indigo-700 text-xs px-2 py-1 rounded-full font-bold">ID: @Model.Id</span>
        </div>

        <div class="p-6 space-y-4">
            <div>
                <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Artista</label>
                <div class="flex items-center gap-3">
                    <div class="h-10 w-10 bg-indigo-100 rounded-full flex items-center justify-center text-indigo-600 font-bold">
                        @Model.Artista?.Nombre.Substring(0,1)
                    </div>
                    <span class="text-lg font-medium text-gray-900">@Model.Artista?.Nombre</span>
                </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Evento</label>
                    <p class="text-gray-900">@Model.Evento?.Titulo</p>
                </div>
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Hora</label>
                    <p class="text-gray-900 font-medium flex items-center gap-1">
                        <i data-lucide="clock" class="w-4 h-4 text-gray-400"></i>
                        @(Model.HoraPresentacion?.ToString("HH:mm") ?? "Por confirmar")
                    </p>
                </div>
            </div>

            <div>
                <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Observaciones</label>
                <div class="bg-gray-50 p-3 rounded-lg text-gray-600 text-sm italic">
                    @(string.IsNullOrEmpty(Model.Observaciones) ? "Sin observaciones registradas." : Model.Observaciones)
                </div>
            </div>
        </div>

        <div class="p-4 bg-gray-50 border-t border-gray-100 text-center">
            <a asp-action="Index" class="text-indigo-600 font-medium hover:text-indigo-800">Volver al Lineup</a>
        </div>
    </div>
</div>
