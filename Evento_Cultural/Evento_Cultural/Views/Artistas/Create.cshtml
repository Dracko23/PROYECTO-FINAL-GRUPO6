@model Evento_Cultural.Models.Artista

@{
    ViewData["Title"] = "Registrar Artista";
}

<div class="max-w-3xl mx-auto py-8">
    <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-100">
        <div class="flex items-center justify-between mb-6">
            <h1 class="text-2xl font-bold text-gray-900">Registrar Artista</h1>
            <a asp-action="Index" class="text-gray-400 hover:text-gray-600">
                <i data-lucide="x" class="w-5 h-5"></i>
            </a>
        </div>

        <form asp-action="Create" method="post" class="space-y-5">
            @Html.AntiForgeryToken()
            <div>
                <label asp-for="Nombre" class="block text-sm font-medium text-gray-700">Nombre artístico</label>
                <input asp-for="Nombre" class="mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none" />
                <span asp-validation-for="Nombre" class="text-red-500 text-xs"></span>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div>
                    <label asp-for="Tipo" class="block text-sm font-medium text-gray-700">Tipo</label>
                    <select asp-for="Tipo" class="mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg bg-white">
                        <option value="">Seleccione tipo</option>
                        <option>Solista</option>
                        <option>Banda</option>
                        <option>Orquesta</option>
                        <option>Teatro</option>
                    </select>
                </div>

                <div>
                    <label asp-for="Genero" class="block text-sm font-medium text-gray-700">Género</label>
                    <input asp-for="Genero" class="mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg" placeholder="Ej. Rock" />
                </div>
            </div>

            <div>
                <label asp-for="PaisOrigen" class="block text-sm font-medium text-gray-700">País de origen</label>
                <input asp-for="PaisOrigen" class="mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg" />
            </div>

            <div>
                <label asp-for="Descripcion" class="block text-sm font-medium text-gray-700">Descripción</label>
                <textarea asp-for="Descripcion" rows="3" class="mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg"></textarea>
            </div>

            <div class="flex items-center gap-3">
                <input asp-for="Activo" type="checkbox" class="h-4 w-4 text-indigo-600" />
                <label asp-for="Activo" class="text-sm text-gray-700">Activo</label>
            </div>

            <div class="flex justify-end gap-3 pt-3">
                <a asp-action="Index" class="px-4 py-2 rounded-lg bg-gray-100 hover:bg-gray-200 text-sm">Cancelar</a>
                <button type="submit" class="px-4 py-2 rounded-lg bg-indigo-600 text-white hover:bg-indigo-700 text-sm">Guardar</button>
            </div>
        </form>
    </div>
</div>

@* Aquí incluimos la partial de validación DENTRO de la sección Scripts.
   Esto evita el error RenderSectionAsync invalid. *@
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
