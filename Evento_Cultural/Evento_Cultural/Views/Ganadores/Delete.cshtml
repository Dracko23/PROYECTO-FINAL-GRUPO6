@model Evento_Cultural.Models.Ganador
@{
    ViewData["Title"] = "Eliminar Ganador";
}

<div class="flex justify-center items-center min-h-[50vh] animate-fade-in">
    <div class="bg-white rounded-xl shadow-xl border border-red-100 p-8 max-w-md w-full text-center">
        <div class="mx-auto w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mb-4">
            <i data-lucide="alert-triangle" class="w-8 h-8 text-red-600"></i>
        </div>

        <h2 class="text-xl font-bold text-gray-900 mb-2">¿Eliminar Ganador?</h2>
        <p class="text-gray-500 mb-6">
            ¿Está seguro que desea eliminar a <strong>@Model.Artista.Nombre</strong> como ganador del evento
            <!-- CORREGIDO: Titulo -->
            <strong>"@Model.Evento.Titulo"</strong>?
        </p>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="flex gap-3 justify-center">
                <a asp-action="Index" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 font-medium">Cancelar</a>
                <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 font-medium shadow-sm">Sí, Eliminar</button>
            </div>
        </form>
    </div>
</div>