@model Evento_Cultural.Models.Evento
@{
    ViewData["Title"] = "Crear Evento";
}

<div class="flex justify-center">
    <div class="bg-white rounded-xl shadow-lg w-full max-w-2xl overflow-hidden animate-fade-in">
        <div class="px-8 py-6 border-b border-gray-100 bg-gray-50 flex justify-between items-center">
            <h3 class="text-xl font-semibold text-gray-900">Programar Nuevo Evento</h3>
            <a asp-action="Index" class="text-gray-400 hover:text-gray-600"><i data-lucide="x" class="w-5 h-5"></i></a>
        </div>

        <form asp-action="Create" class="p-8 space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

            <div>
                <label asp-for="Titulo" class="block text-sm font-medium text-gray-700 mb-1">Nombre del Evento</label>
                <input asp-for="Titulo" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none" placeholder="Ej. Festival de Jazz" />
                <span asp-validation-for="Titulo" class="text-red-500 text-xs"></span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="FechaInicio" class="block text-sm font-medium text-gray-700 mb-1">Fecha Inicio</label>
                    <input asp-for="FechaInicio" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none" />
                </div>
                <div>
                    <label asp-for="Lugar" class="block text-sm font-medium text-gray-700 mb-1">Lugar</label>
                    <input asp-for="Lugar" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none" />
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="TipoEvento" class="block text-sm font-medium text-gray-700 mb-1">Tipo de Evento</label>
                    <select asp-for="TipoEvento" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none">
                        <option value="Concierto">Concierto</option>
                        <option value="Feria">Feria</option>
                        <option value="Teatro">Teatro</option>
                    </select>
                </div>
                <div>
                    <label asp-for="Estado" class="block text-sm font-medium text-gray-700 mb-1">Estado</label>
                    <select asp-for="Estado" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none">
                        <option value="PROGRAMADO">PROGRAMADO</option>
                        <option value="EN CURSO">EN CURSO</option>
                    </select>
                </div>
            </div>

            <div>
                <label asp-for="Descripcion" class="block text-sm font-medium text-gray-700 mb-1">Descripción</label>
                <textarea asp-for="Descripcion" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none"></textarea>
            </div>

            <div class="flex justify-end gap-3 pt-4">
                <a asp-action="Index" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">Cancelar</a>
                <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 shadow-sm">Guardar Evento</button>
            </div>
        </form>
    </div>
</div>