@model IEnumerable<Evento_Cultural.Models.Evento>

@{
    ViewData["Title"] = "Eventos Culturales";
}

<div class="animate-fade-in">
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Eventos Culturales</h1>
            <p class="text-sm text-gray-500 mt-1">Programación y control de eventos.</p>
        </div>
        <a asp-action="Create" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg flex items-center gap-2 shadow-sm transition-colors">
            <i data-lucide="plus" class="w-4 h-4"></i> Crear Evento
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-12 bg-white rounded-xl border border-gray-200">
            <i data-lucide="calendar-off" class="w-12 h-12 text-gray-300 mx-auto mb-3"></i>
            <p class="text-gray-500">No hay eventos programados.</p>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var item in Model)
            {
                // Lógica de colores para estado
                var estadoClass = item.Estado == "PROGRAMADO" ? "bg-blue-100 text-blue-800 border-blue-200" :
                item.Estado == "EN CURSO" ? "bg-green-100 text-green-800 border-green-200" :
                "bg-gray-100 text-gray-800 border-gray-200";

                <div class="bg-white rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition-shadow overflow-hidden group">
                    <!-- Header Gradiente -->
                    <div class="h-32 bg-gradient-to-r from-indigo-500 to-purple-500 relative">
                        @if (item.Capacidad != null)
                        {
                            <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm px-2 py-1 rounded-md text-xs font-bold text-indigo-700 shadow-sm">
                                Cap: @item.Capacidad
                            </div>
                        }
                        <div class="absolute -bottom-6 left-6">
                            <div class="w-12 h-12 bg-white rounded-lg shadow-md flex flex-col items-center justify-center border border-gray-100 text-center">
                                <span class="text-xs text-gray-500 uppercase font-bold">@item.FechaInicio.ToString("MMM")</span>
                                <span class="text-lg font-bold text-gray-900 leading-none">@item.FechaInicio.Day</span>
                            </div>
                        </div>
                    </div>

                    <!-- Cuerpo -->
                    <div class="pt-8 pb-6 px-6">
                        <div class="flex justify-between items-start mb-2">
                            <span class="px-2 py-0.5 rounded-full text-xs font-medium border @estadoClass">
                                @item.Estado
                            </span>
                        </div>
                        <h3 class="text-lg font-bold text-gray-900 mb-1 truncate">@item.Titulo</h3>

                        <div class="space-y-2 mt-4">
                            <div class="flex items-center text-sm text-gray-500">
                                <i data-lucide="map-pin" class="w-4 h-4 mr-2 text-gray-400"></i>
                                <span class="truncate">@item.Lugar</span>
                            </div>
                            <div class="flex items-center text-sm text-gray-500">
                                <i data-lucide="clock" class="w-4 h-4 mr-2 text-gray-400"></i>
                                @item.FechaInicio.ToString("HH:mm") hrs
                            </div>
                        </div>

                        <div class="mt-6 pt-4 border-t border-gray-100 flex gap-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="flex-1 bg-gray-50 text-gray-700 py-2 rounded-md text-sm font-medium hover:bg-gray-100 transition-colors text-center">
                                Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="flex-1 bg-indigo-50 text-indigo-700 py-2 rounded-md text-sm font-medium hover:bg-indigo-100 transition-colors text-center">
                                Detalles
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>