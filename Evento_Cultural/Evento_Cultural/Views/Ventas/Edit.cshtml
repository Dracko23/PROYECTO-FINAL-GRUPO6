@model Evento_Cultural.Models.Venta
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Editar Venta";
}

<div class="flex justify-center">
    <div class="bg-white rounded-xl shadow-lg w-full max-w-lg p-6 border border-gray-100 animate-fade-in">
        <div class="flex justify-between items-center mb-6">
            <h3 class="text-lg font-semibold text-gray-900">Editar Registro de Venta</h3>
            <a asp-action="Index" class="text-gray-400 hover:text-gray-600"><i data-lucide="x" class="w-5 h-5"></i></a>
        </div>

        <form asp-action="Edit" method="post" class="space-y-5">
            <input type="hidden" asp-for="Id" />

            <div>
                <label asp-for="EventoId" class="block text-sm font-medium text-gray-700 mb-1">Evento</label>
                <!-- OJO: Aquí cambiamos "Nombre" por "Titulo" -->
                <select asp-for="EventoId" class="w-full border-gray-300 rounded-lg p-2.5 bg-gray-50 border focus:ring-2 focus:ring-indigo-500 outline-none"
                        asp-items="@(new SelectList(ViewBag.Eventos, "Id", "Titulo"))"></select>
            </div>

            <!-- Eliminado el campo EntradaId que causaba error -->

            <div>
                <label asp-for="ClienteNombre" class="block text-sm font-medium text-gray-700 mb-1">Cliente</label>
                <input asp-for="ClienteNombre" class="w-full border-gray-300 rounded-lg p-2.5 border focus:ring-2 focus:ring-indigo-500 outline-none" />
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label asp-for="Cantidad" class="block text-sm font-medium text-gray-700 mb-1">Cantidad</label>
                    <input asp-for="Cantidad" type="number" class="w-full border-gray-300 rounded-lg p-2.5 border focus:ring-2 focus:ring-indigo-500 outline-none" />
                </div>
                <div>
                    <label asp-for="Total" class="block text-sm font-medium text-gray-700 mb-1">Total ($)</label>
                    <input asp-for="Total" type="number" step="0.01" class="w-full border-gray-300 rounded-lg p-2.5 border bg-gray-50 text-gray-500" readonly />
                    <p class="text-xs text-gray-400 mt-1">Calculado automáticamente</p>
                </div>
            </div>

            <div class="flex justify-end gap-3 pt-4">
                <a asp-action="Index" class="px-4 py-2 text-gray-700 bg-gray-50 rounded-lg hover:bg-gray-100 font-medium">Cancelar</a>
                <button type="submit" class="px-4 py-2 text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 shadow-sm font-medium">Guardar Cambios</button>
            </div>
        </form>
    </div>
</div>