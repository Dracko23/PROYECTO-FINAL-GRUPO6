<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Evento Cultural</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Fuentes -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Iconos Lucide -->
    <script src="https://unpkg.com/lucide@latest"></script>

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .animate-fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }

        @@keyframes fadeIn {


        {
            from

        {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
    </style>
</head>
<body class="bg-gray-50 text-gray-900">
    <div class="min-h-screen flex">
        <!-- Sidebar -->
        <aside class="w-64 bg-white border-r border-gray-200 hidden md:block fixed h-full z-10">
            <div class="h-16 flex items-center px-6 border-b border-gray-200">
                <div class="bg-indigo-600 p-1.5 rounded-lg mr-3">
                    <i data-lucide="layout-dashboard" class="text-white w-5 h-5"></i>
                </div>
                <span class="text-xl font-bold text-gray-900 tracking-tight">Evento Cultural</span>
            </div>

            <nav class="p-4 space-y-1">
                <a href="@Url.Action("Index", "Dashboard")" class="flex items-center px-4 py-3 text-sm font-medium rounded-lg text-gray-700 hover:bg-indigo-50 hover:text-indigo-700 group transition-colors">
                    <i data-lucide="bar-chart-2" class="mr-3 w-5 h-5 text-gray-400 group-hover:text-indigo-600"></i>
                    Dashboard
                </a>
                <a href="@Url.Action("Index", "Artistas")" class="flex items-center px-4 py-3 text-sm font-medium rounded-lg text-gray-700 hover:bg-indigo-50 hover:text-indigo-700 group transition-colors">
                    <i data-lucide="users" class="mr-3 w-5 h-5 text-gray-400 group-hover:text-indigo-600"></i>
                    Artistas
                </a>
                <a href="@Url.Action("Index", "Eventos")" class="flex items-center px-4 py-3 text-sm font-medium rounded-lg text-gray-700 hover:bg-indigo-50 hover:text-indigo-700 group transition-colors">
                    <i data-lucide="calendar" class="mr-3 w-5 h-5 text-gray-400 group-hover:text-indigo-600"></i>
                    Eventos
                </a>
                <a href="@Url.Action("Index", "Participaciones")" class="flex items-center px-4 py-3 text-sm font-medium rounded-lg text-gray-700 hover:bg-indigo-50 hover:text-indigo-700 group transition-colors">
                    <i data-lucide="mic-2" class="mr-3 w-5 h-5 text-gray-400 group-hover:text-indigo-600"></i>
                    Participaciones
                </a>
                <a href="@Url.Action("Index", "Entradas")" class="flex items-center px-4 py-3 text-sm font-medium rounded-lg text-gray-700 hover:bg-indigo-50 hover:text-indigo-700 group transition-colors">
                    <i data-lucide="ticket" class="mr-3 w-5 h-5 text-gray-400 group-hover:text-indigo-600"></i>
                    Entradas
                </a>
                <a href="@Url.Action("Index", "Ventas")" class="flex items-center px-4 py-3 text-sm font-medium rounded-lg text-gray-700 hover:bg-indigo-50 hover:text-indigo-700 group transition-colors">
                    <i data-lucide="dollar-sign" class="mr-3 w-5 h-5 text-gray-400 group-hover:text-indigo-600"></i>
                    Ventas
                </a>
                <a href="@Url.Action("Index", "Ganadores")" class="flex items-center px-4 py-3 text-sm font-medium rounded-lg text-gray-700 hover:bg-indigo-50 hover:text-indigo-700 group transition-colors">
                    <i data-lucide="trophy" class="mr-3 w-5 h-5 text-gray-400 group-hover:text-indigo-600"></i>
                    Ganadores
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 md:ml-64 flex flex-col min-h-screen">
            <!-- Topbar -->
            <header class="bg-white border-b border-gray-200 h-16 flex items-center justify-between px-8 sticky top-0 z-20">
                <h2 class="text-lg font-semibold text-gray-800">@ViewData["Title"]</h2>

                <div class="flex items-center gap-4">
                    <div class="relative hidden md:block">
                        <i data-lucide="search" class="absolute left-3 top-2.5 w-4 h-4 text-gray-400"></i>
                        <input type="text" placeholder="Buscar..." class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none w-64" />
                    </div>

                    <button class="p-2 rounded-full hover:bg-gray-100 relative">
                        <i data-lucide="bell" class="w-5 h-5 text-gray-500"></i>
                        <span class="absolute top-2 right-2 w-2 h-2 bg-red-500 rounded-full border border-white"></span>
                    </button>

                    <div class="h-8 w-8 rounded-full bg-gradient-to-r from-indigo-500 to-purple-500 flex items-center justify-center text-white text-xs font-bold">AD</div>
                </div>
            </header>

            <main class="p-8 bg-gray-50 flex-1">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scripts globales -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <script>
        lucide.createIcons();
    </script>

    <!-- Scripts específicos de cada vista -->
    @RenderSection("Scripts", required: false)

</body>
</html>
