@model IEnumerable<Evento_Cultural.Models.Participacion>

@{
    ViewData["Title"] = "Participaciones";
}

<div class="animate-fade-in max-w-7xl mx-auto py-8">
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Participaciones</h1>
            <p class="text-sm text-gray-500 mt-1">Lista de artistas asignados a eventos.</p>
        </div>
        <a asp-action="Create" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg flex items-center gap-2 shadow-sm transition-colors">
            <i data-lucide="plus" class="w-4 h-4"></i> Nuevo Participante
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-12 bg-white rounded-xl border border-gray-200">
            <i data-lucide="user-minus" class="w-12 h-12 text-gray-300 mx-auto mb-3"></i>
            <p class="text-gray-500">No hay participaciones registradas.</p>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var p in Model)
            {
                <div class="bg-white rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition-shadow overflow-hidden group">
                    <div class="p-6">
                        <h3 class="text-lg font-bold text-gray-900 truncate">@p.Artista?.Nombre</h3>
                        <p class="text-sm text-gray-500">Evento: @p.Evento?.Titulo</p>
                        <p class="text-sm text-gray-500">Hora: @(p.HoraPresentacion.HasValue? p.HoraPresentacion.Value.ToString("HH:mm") : "TBA")</p>
                        <p class="text-sm text-gray-500">Observaciones: @(string.IsNullOrEmpty(p.Observaciones) ? "N/A" : p.Observaciones)</p>

                        <div class="mt-4 flex gap-2">
                            <a asp-action="Edit" asp-route-id="@p.Id" class="flex-1 bg-gray-50 text-gray-700 py-2 rounded-md text-sm font-medium hover:bg-gray-100 text-center">
                                Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@p.Id" class="flex-1 bg-red-50 text-red-700 py-2 rounded-md text-sm font-medium hover:bg-red-100 text-center">
                                Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
